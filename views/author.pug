extends main.pug

block create
    .row
        form.col.s12
            #CreateAuthorDiv
                .row#authorRow
                    .input-field.col.s6
                        input#createAuthor.validate(placeholder='Your Author Name', type='text', required)
                        label(for='createAuthor') Author
                        span.helper-text(data-error="author name must be between 3 and 20 characters")
            
            button#authorSubmit.btn.waves-effect.waves-light(type='submit', name='action')
                | Submit
                i.material-icons.right