extends main.pug

block create
    .container
        .row
            form.col.s6#loginForm
                    h6 Author Login
                    .input-field.col.s6
                        input#loginName.validate(placeholder='Name', type='text')
                        label(for='login_name') Name
                    .input-field.col.s6
                        input#loginPassword.validate(type='text')
                        label(for='password') Password
            form.col.s6#signUpForm
                    h6 New Authors
                    .input-field.col.s6
                        input#newName.validate(placeholder='Name', type='text')
                        label(for='new_name') Name
                    .input-field.col.s6
                        input#newPassword.validate(type='text')
                        label(for='password') Password
                        
        .row
            div.col.s6
                a.waves-effect.waves-light.btn-small(id="login-button") Login
                a.waves-effect.waves-light.btn-small(id="loginGetButton") Login
                a.waves-effect.waves-light.btn-small(id="signUpPostButton") Sign Up
            div.col.s6
                a.waves-effect.waves-light.btn-small(id="signup-button") Sign Up
                

        .row
            form#createForm.col.s12
                #titleGenreDiv
                    .row#titleGenreRow
                        .input-field.col.m6.s5
                            input#title.validate(placeholder='Placeholder', type='text', minlength="5", maxlength="40", required, aria-required="true")
                            label(for='title') Story Title
                            span#titleHelper.helper-text(data-error="Every story needs a title!")

                
                        .input-field.col.m6.s5
                            select#genre.validate(required, aria-required="true")
                                option(value=null) Genre
                                option(value='Drama') Drama
                                option(value='Comedy') Comedy
                                option(value='Scary') Scary
                            label Pick your Genre
                            span.helper-text(data-error="Don't forget to chose a genre!")


                #textDiv
                    .row#storyRow
                        form.col.s12
                            .row
                            .input-field.col.s12
                                textarea#text.materialize-textarea.validate(data-length="5000", maxlength="5000", required, aria-required="true")
                                label(for='textarea1') Your Story Here



                button#submit.btn.waves-effect.waves-light(type='submit', name='action')
                    | Submit
                    i.material-icons.right