extends main.pug

block create
    #modal1.modal
        .modal-content
            .row
                form.col.s12
                    .row
                        .input-field.col.s6
                            input#author_name.validate(placeholder='Name', type='text')
                            label(for='author_name') Author Name
        .modal-footer
            a.modal-close.waves-effect.waves-green.btn-flat(href='#!') Submit
    .row
        form.col.s12
            #titleGenreDiv
                .row#titleGenreRow
                    .input-field.col.m6.s5
                        input#title.validate(placeholder='Placeholder', type='text')
                        label(for='title') Story Title
            
                    .input-field.col.m6.s5
                        select#genre
                            option(value='') Genre
                            option(value='1') Option 1
                            option(value='2') Option 2
                            option(value='3') Option 3
                        label Pick your Genre

            #textDiv
                .row#storyRow
                    form.col.s12
                        .row
                        .input-field.col.s12
                            textarea#text.materialize-textarea
                            label(for='textarea1') Your Story Here 

            button#submit.btn.waves-effect.waves-light(type='submit', name='action')
                | Submit
                i.material-icons.right


  
    
