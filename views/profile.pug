extends main.pug

block create
    .container
        .row
            form.col.s12(onsubmit="validateAuthorForm()")
                #CreateAuthorDiv
                    .row#authorRow
                        .input-field.col.s6
                            input#createAuthor.validate(placeholder='Your Author Name', type='text',min-length="3", max-length="20", required, aria-required="true")
                            label(for='createAuthor') Author
                            span#AuthorHelper.helper-text(data-error="author name must be between 3 and 20 characters")
                
                button#authorSubmit.btn.waves-effect.waves-light(type='submit', name='action')
                    | Submit
                    i.material-icons.right