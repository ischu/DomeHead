extends main.pug

block create
    .container 
        .row
            form
            .input-field
                input#search(placeholder="Search" type='search', required='')
                label.label-icon(for='search')
                    i#spyglass.material-icons search
        .row(id="storiesPage")
            div#storyDiv
                .row
                    ul
                        each story in stories
                            li #{stories.title}
                                #storiesDisplay.col.s12.m6
                                    .card.blue-grey.darken-1
                                        .card-content.white-text
                                            a#storyLink.card-title(href="write/"+story.id) #{story.title}
                                        .card-action
                                            a #{story.genre}
                                            a #{story.Author.name}
                                            
                    
