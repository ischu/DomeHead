extends main.pug

block create
    .container 
        script.
        .row
            a#viewMyStories(href="") show my stories
            var authorId = localStorage.getItem("LoggedAuthorId")
        .row(id="storiesPage")
            a#viewMyStories(href="stories/"+authorId) Show My Stories
            div#storyDiv
                .row
                    ul
                        each story in stories
                            li #{stories.title}
                                #storiesDisplay.col.s12.m6
                                    .card.blue-grey.darken-1
                                        .card-content.white-text
                                            a#storyLink.card-title(href="write/"+story.id) #{story.title}
                                        .card-action
                                            a #{story.genre}
                                            a #{story.Author.name}
                                            
                    
